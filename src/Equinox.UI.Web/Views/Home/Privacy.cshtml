using System.ComponentModel.DataAnnotations;

public class PrivacyPolicyViewModel
{
    [Required]
    [Display(Name = "Title")]
    public string Title { get; set; }

    [Display(Name = "Policy")]
    public string Policy { get; set; }
}

@model PrivacyPolicyViewModel

<h1>@Model.Title</h1>
<p>@Model.Policy</p>

